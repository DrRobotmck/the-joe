<div class="back new"></div>
<%= render "layouts/header" %>

<div class="row shop-show">
  
  <div class="small-4 large-4 columns">
    <h2 class="salutation">Welcome!</h2>
    <%=link_to("Edit Account",{:action => :edit}, {:method => :get}) %>

    <h2 class="name"><%=@user.name%></h2>
    <h4 class="email"><%=@user.email%></h4>

  </div>
  <div class="small-8 large-8 columns">
    <h2 class="salutation">My List</h2>
    <div class="row">
      <ul>
       <% for shops in @user.shops do%>
       <li>
        <div class="small-4 large-4 columns more">
          <a href="<%= shop_path(shops)%>"><img src="<%=shops.image%>"></a>
          <h2 class="name"><%=shops.name%></h2>
          <img class="rating"src="<%=shops.rating_url%>">
          <h4 class="neighborhood"><%=shops.neighborhood%></h4>
          <h4 class="address"><%=shops.address%></h4>
          <%= button_to("Remove", unfavorite_shop_path(shops), :method => :delete)%>
          <div>
          </li>
          <%end%>
        </ul>
      </div>
    </div>

  </div>