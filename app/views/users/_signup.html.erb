<%=form_for @user, html: {class: "new_user_form"} do	|u| %>
			<%= u.label :tag, "Account", class: "user-form-label"%><br>
			<%= u.label :name, "Name", class: "user-form"%><br>
			<%=	u.text_field :name%><br>
			<%=	u.label :email, "Email", class: "user-form"%><br>
				<%=	u.text_field :email%><br>
			<%=	u.label :password, "Password", class: "user-form"%><br>
			<%=	u.password_field :password %><br>
			<%=	u.label :password_confirmation, "Password confirmation", class: "user-form"%><br>
			<%= u.password_field :password_confirmation%><br>
			<%= u.submit "Submit", class: "searchbox"%>
			<%end%>